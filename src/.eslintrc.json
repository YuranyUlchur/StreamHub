{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react"],
    "rules": {
      "react/react-in-jsx-scope": "off", // Si no usas React importado en cada archivo
      "jsx-a11y/anchor-is-valid": ["error", { "components": [] }]
    }
  }
  